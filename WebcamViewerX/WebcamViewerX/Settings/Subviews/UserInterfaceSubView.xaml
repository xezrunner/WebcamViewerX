            <!-- Content 2-->
            <Grid Margin="25,15,15,15" VerticalAlignment="Top" Grid.Row="2" Visibility="Visible">
                <Grid.Resources>
                    <Style TargetType="TextBlock">
                        <Setter Property="Foreground" Value="{DynamicResource Foreground_Secondary}" />
                        <Setter Property="Padding" Value="4" />
                        <Setter Property="FontSize" Value="13" />
                        <Setter Property="TextWrapping" Value="Wrap" />
                    </Style>
                </Grid.Resources>

                <StackPanel Background="{DynamicResource Background}" Margin="8">
                    <StackPanel.Effect>
                        <DropShadowEffect Opacity="0.03" BlurRadius="0" ShadowDepth="3" />
                    </StackPanel.Effect>

                    <StackPanel Margin="10">

                        <TextBlock>
                    <Run Foreground="{DynamicResource Accent}" FontWeight="Medium" Text="Theme" />
                    <LineBreak />
                    Choose between a lighter or darker shade of background.
                        </TextBlock>

                        <StackPanel x:Name="themeStackPanel" Orientation="Vertical" Margin="4,5,0,0">
                            <xz_controls:RadioButton x:Name="theme_0" Text="Light" IsActiveChanged="theme_Click" Visibility="Collapsed" />
                            <xz_controls:RadioButton x:Name="theme_1" Text="Dark" IsActiveChanged="theme_Click" Visibility="Collapsed" />
                            <xezui_buttons:ToggleSwitchButton x:Name="themeToggleButton" Icon="" Margin="-12,0" Title="Dark mode" Description="Use darker background colors for dark work environments" IsActiveChanged="ThemeToggleButton_IsActiveChanged" />
                        </StackPanel>

                        <TextBlock Margin="0,10,0,0">
                    <Run Foreground="{DynamicResource Accent}" FontWeight="Medium" Text="Accent color" />
                    <LineBreak />
                    The colorful elements of the application will follow this choice.
                        </TextBlock>

                        <StackPanel x:Name="accentStackPanel" Orientation="Horizontal" Margin="4,5,0,0">
                            <xz_controls:RadioButton Text="Teal" IsActiveChanged="accent_Click" />
                            <xz_controls:RadioButton Text="Blue" IsActiveChanged="accent_Click" />
                            <xz_controls:RadioButton Text="Green" IsActiveChanged="accent_Click" />
                            <xz_controls:RadioButton Text="Orange" IsActiveChanged="accent_Click" />
                            <xz_controls:RadioButton Text="Pink" IsActiveChanged="accent_Click" />
                            <xz_controls:RadioButton Text="Purple" IsActiveChanged="accent_Click" />
                        </StackPanel>

                        <TextBlock Margin="0,10,0,0">
                    <Run Foreground="{DynamicResource Accent}" FontWeight="Medium" Text="Control effects" />
                    <LineBreak />
                    You can have fun with either a flashlight, or a puddle of water.
                        </TextBlock>

                        <StackPanel x:Name="controlfxStackPanel" Orientation="Horizontal" Margin="4,5,0,0">
                            <xz_controls:RadioButton x:Name="controlfx_P" Text="Ripple (wide)" IsActiveChanged="controlfx_Click" />
                            <xz_controls:RadioButton x:Name="controlfx_MM" Text="Ripple (short)" IsActiveChanged="controlfx_Click" />
                            <xz_controls:RadioButton x:Name="controlfx_Reveal" Text="Reveal Highlight" IsActiveChanged="controlfx_Click" />
                        </StackPanel>

                        <TextBlock Opacity="0.3" Margin="0,5,0,0">
                    Note! These effects are under development. It is recommended to keep this at the default value to prevent crashes or locking yourself out of the application forever.
                        </TextBlock>

                        <TextBlock Margin="0,10,0,0">
                    <Run Foreground="{DynamicResource Accent}" FontWeight="Medium" Text="Blur effects" />
                        </TextBlock>

                        <StackPanel x:Name="blurfxStackPanel" Orientation="Vertical" Margin="4,5,0,0">
                            <xezui_buttons:ToggleSwitchButton x:Name="blurToggleButton" Icon="" Margin="-12,0" Title="Enable blur effects" Description="This impacts performance on low-end systems." IsActiveChanged="BlurToggleButton_IsActiveChanged" />
                        </StackPanel>

                        <xezui_buttons:Button x:Name="resetConfigButton" Text="Reset to default settings" Margin="0,20,0,0" Click="resetConfigButton_Click" />

                    </StackPanel>

                    <Rectangle Height="500" />

                </StackPanel>

            </Grid>

        </Grid>
    </ScrollViewer>
</Page>